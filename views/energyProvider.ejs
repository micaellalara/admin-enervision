                    <div class="modal fade" id="deleteProviderModal" tabindex="-1" role="dialog"
                        aria-labelledby="deleteProviderModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="deleteProviderModalLabel">Delete Provider</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <p>Are you sure you want to delete this provider?</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                    <button type="button" class="btn btn-danger"
                                        id="deleteProviderButton">Delete</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <script>
                        // Function to show the edit modal and populate the fields with provider data
                        function showEditProviderModal(providerId) {
                            fetch(`/providers/${providerId}`)
                                .then(response => {
                                    if (!response.ok) throw new Error('Failed to fetch provider details');
                                    return response.json();
                                })
                                .then(provider => {
                                    document.getElementById("editProviderId").value = provider._id;
                                    document.getElementById("editProviderName").value = provider.providerName;
                                    document.getElementById("editRatePerKwh").value = provider.ratePerKwh;
                                    $('#editProviderModal').modal('show');
                                })
                                .catch(err => console.error(err));
                        }

                        // Edit provider functionality
                        document.getElementById("editProviderForm").onsubmit = function (event) {
                            event.preventDefault();

                            const providerId = document.getElementById("editProviderId").value;
                            const data = {
                                providerName: document.getElementById("editProviderName").value.trim(),
                                ratePerKwh: parseFloat(document.getElementById("editRatePerKwh").value)
                            };

                            fetch(`/providers/edit/${providerId}`, {
                                method: 'PUT',
                                headers: {
                                    'Content-Type': 'application/json'
                                },
                                body: JSON.stringify(data)
                            })
                                .then(response => {
                                    if (!response.ok) throw new Error('Failed to update provider');
                                    return response.json();
                                })
                                .then(updatedProvider => {
                                    const row = document.querySelector(`tr[data-provider-id='${providerId}']`);
                                    row.querySelector('td:nth-child(1)').textContent = updatedProvider.providerName;
                                    row.querySelector('td:nth-child(2)').textContent = updatedProvider.ratePerKwh;
                                    $('#editProviderModal').modal('hide');
                                })
                                .catch(err => console.error(err));
                        };

                        // Function to show the delete modal and bind the delete operation
                        function showDeleteProviderModal(providerId) {
                            $('#deleteProviderModal').modal('show');
                            document.getElementById("deleteProviderButton").onclick = function () {
                                fetch(`/providers/delete/${providerId}`, {
                                    method: 'DELETE'
                                })
                                    .then(response => {
                                        if (!response.ok) throw new Error('Failed to delete provider');
                                        document.querySelector(`tr[data-provider-id='${providerId}']`).remove();
                                        $('#deleteProviderModal').modal('hide');
                                    })
                                    .catch(err => console.error(err));
                            };
                        }

                        document.getElementById("addProviderForm").onsubmit = function (event) {
                            event.preventDefault();

                            const data = {
                                providerName: document.getElementById("providerName").value.trim(),
                                ratePerKwh: parseFloat(document.getElementById("ratePerKwh").value)
                            };

                            fetch('/providers', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json'
                                },
                                body: JSON.stringify(data)
                            })
                                .then(response => {
                                    if (!response.ok) throw new Error('Failed to add provider');
                                    return response.json();
                                })
                                .then(responseData => {
                                    const newProvider = responseData.newProvider;
                                    console.log(newProvider);

                                    const tbody = document.querySelector("table tbody");
                                    const newRow = document.createElement("tr");
                                    newRow.setAttribute("data-provider-id", newProvider._id);
                                    newRow.innerHTML = `
            <td>${newProvider.providerName}</td>
            <td>${newProvider.ratePerKwh}</td>
            <td>
                <button class="btn btn-warning btn-sm" onclick="showEditProviderModal('${newProvider._id}')">Edit</button>
                <button class="btn btn-danger btn-sm" onclick="showDeleteProviderModal('${newProvider._id}')">Delete</button>
            </td>
        `;
                                    tbody.appendChild(newRow);
                                    $('#addProviderModal').modal('hide');
                                })
                                .catch(err => console.error(err));
                        };

                    </script>

                </div>
            </div>
        </div>

