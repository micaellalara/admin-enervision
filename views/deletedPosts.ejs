      <div class="main-panel">
        <div class="content-wrapper">
          <div class="header d-flex flex-column align-items-left mb-4">
            <div class="d-flex align-items-left justify-content-left">
              <img src="/images/deleted.png" style="width: 75px; height: 50px;" class="header-icon"
                alt="Deleted Posts Icon">
              <h2 class="ml-3 mt-3" style="font-size: 30px;">Deleted Posts Management</h2>
            </div>
            <br>

            <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
              <% if (deletedPosts.length===0) { %>
                <p>No posts have been deleted.</p>
                <% } else { %>
                  <table class="table table-bordered">
                    <thead class="thead-light" style="text-align: center; vertical-align: middle;">
                      <tr>
                        <th>User</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Date Deleted</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody style="text-align: center; vertical-align: middle;">
                      <% deletedPosts.forEach(post=> { %>
                        <tr data-post-id="<%= post._id %>">
                          <td>
                            <%= post.userId ? post.userId.username : 'User not found' %>
                        </td>
                          <td>
                            <%= post.title %>
                          </td>
                          <td>
                            <%= post.description %>
                          </td>
                          <td>
                            <%= post.deletedAt.toLocaleString() %>
                          </td>
                          <td>

                            <button class="btn btn-success btn-sm"
                              onclick="showRestorePostModal('<%= post._id %>')">Restore</button>
                          </td>
                        </tr>
                        <% }) %>
                    </tbody>
                  </table>
                  <% } %>
            </div>
          </div>
        </div>
      </div>


      <div class="modal fade" id="restorePostModal" tabindex="-1" role="dialog" aria-labelledby="restorePostModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="restorePostModalLabel">Restore Post</h5>
            </div>
            <div class="modal-body">
              Are you sure you want to restore this post?
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
              <button type="button" class="btn btn-primary" id="confirmRestoreButton">Restore</button>
            </div>
          </div>
        </div>
      </div>
      <script>
        let currentPostId = null;

        function showRestorePostModal(postId) {
          currentPostId = postId;
          $('#restorePostModal').modal('show');
        }

        document.getElementById('confirmRestoreButton').addEventListener('click', function () {
          if (currentPostId) {
            fetch(`/restorePost/${currentPostId}`, {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              }
            })
              .then(response => response.json())
              .then(data => {
                if (data.success) {
                  alert('Post has been successfully restored.');

                  const postRow = document.querySelector(`[data-post-id="${currentPostId}"]`);
                  if (postRow) {
                    postRow.remove();
                  }
                } else {
                  alert('Error restoring post: ' + data.error);
                }
              })
              .catch(error => {
                console.error('Error:', error);
                alert('An error occurred while processing your request. Please try again.');
              });
            $('#restorePostModal').modal('hide');
          }
        });
      </script>


