            data-months="<%= JSON.stringify(months) %>" data-user-counts="<%= JSON.stringify(userCounts) %>"></div>

          <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
          <script type="text/javascript">
            document.addEventListener('DOMContentLoaded', function () {
              const chartDataElement = document.getElementById('chart-data');

              let applianceDays, averageApplianceCounts;
              try {
                applianceDays = JSON.parse(chartDataElement.getAttribute('data-appliance-days'));
                averageApplianceCounts = JSON.parse(chartDataElement.getAttribute('data-average-appliance-counts'));
              } catch (error) {
                console.error("Error parsing order chart data attributes:", error);
                return;
              }

              function renderChart(days, averages) {
                const ctxOrder = document.getElementById('chart').getContext('2d');
                const orderChart = new Chart(ctxOrder, {
                  type: 'line',
                  data: {
                    labels: days,
                    datasets: [{
                      label: 'Average Appliances Added Per Day',
                      data: averages,
                      borderColor: 'rgba(75, 192, 192, 1)',
                      backgroundColor: 'rgba(75, 192, 192, 0.2)',
                      borderWidth: 2,
                      fill: true
                    }]
                  },
                  options: {
                    responsive: true,
                    scales: {
                      y: {
                        beginAtZero: true
                      }
                    }
                  }
                });
              }

              renderChart(applianceDays, averageApplianceCounts);

              let monthsData, userCountsData;
              try {
                monthsData = JSON.parse(chartDataElement.getAttribute('data-months'));
                userCountsData = JSON.parse(chartDataElement.getAttribute('data-user-counts'));
              } catch (error) {
                console.error("Error parsing monthly chart data attributes:", error);
                return;
              }

              const allMonths = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
              const userCountsPerMonth = new Array(12).fill(0);

              monthsData.forEach((month, index) => {
                const monthIndex = new Date(month + "-01").getMonth();
                if (!isNaN(monthIndex)) {
                  userCountsPerMonth[monthIndex] = userCountsData[index];
                }
              });

              const ctxMonthly = document.getElementById('monthly-chart').getContext('2d');
              const salesChart = new Chart(ctxMonthly, {
                type: 'bar',
                data: {
                  labels: allMonths,
                  datasets: [{
                    label: 'Monthly Registered Users',
                    data: userCountsPerMonth,
                    backgroundColor: 'rgba(75, 192, 192, 0.6)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 2,
                    hoverBackgroundColor: 'rgba(75, 192, 192, 0.8)',
                    hoverBorderColor: 'rgba(75, 192, 192, 1)',
                    borderRadius: 5
                  }]
                },
                options: {
                  responsive: true,
                  maintainAspectRatio: false,
                  plugins: {
                    legend: {
                      display: true,
                      labels: {
                        font: {
                          size: 14
                        }
                      }
                    },
                    tooltip: {
                      backgroundColor: 'rgba(75, 192, 192, 0.9)',
                      titleColor: '#fff',
                      bodyColor: '#fff',
                    }
                  },
                  scales: {
                    y: {
                      beginAtZero: true,
                      title: {
                        display: true,
                        text: 'Number of Registered Users',
                        font: {
                          size: 16
                        }
                      },
                      ticks: {
                        color: '#333',
                        font: {
                          size: 12
                        }
                      }
                    },
                    x: {
                      title: {
                        display: true,
                        text: 'Months of the Year',
                        font: {
                          size: 16
                        }
                      },
                      ticks: {
                        color: '#333',
                        font: {
                          size: 12
                        }
                      }
                    }
                  }
                }
              });

              // Filter by date range
              document.getElementById('filter-button').addEventListener('click', function () {
                const startDate = document.getElementById('start-date').value;
                const endDate = document.getElementById('end-date').value;

                if (!startDate || !endDate) {
                  alert("Please select both start and end dates.");
                  return;
                }

                // Make an API call to get new data for the selected date range
                fetch(`/api/average-appliances?start=${startDate}&end=${endDate}`)
                  .then(response => response.json())
                  .then(data => {
                    renderChart(data.applianceDays, data.averageApplianceCounts);
                  })
                  .catch(error => {
                    console.error("Error fetching average appliances data:", error);
                  });
              });
            });
          </script>

