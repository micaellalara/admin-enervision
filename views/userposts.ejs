      <div class="main-panel">
        <div class="content-wrapper">
            <div class="header d-flex flex-column align-items-left mb-4">
                <div class="d-flex align-items-left justify-content-left">
                    <img src="/images/userpost.png" style="width: 100px; height: 50px;" class="header-icon"
                        alt="User Posts Icon">
                    <h2 class="ml-2 mt-3" style="font-size: 45px;">User Post Management</h2>
                </div>
                <br>

                <form action="/userposts" method="GET" class="mb-3">
                    <div class="input-group">
                        <input type="text" name="username" class="form-control" placeholder="Search by Username"
                            value="<%= searchTerm %>" style="margin-right: 5px; border-radius: 10px;">

                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </form>

                <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                    <table class="table table-bordered">
                        <thead class="thead-light" style="text-align: center; vertical-align: middle;">
                            <tr>
                                <th>User</th>
                                <th>Post Category</th>
                                <th>Date</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Image</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody style="text-align: center; vertical-align: middle;">
                            <% usersWithPosts.forEach(user=> { %>
                                <% user.posts.forEach(post=> { %>
                                    <tr>
                                        <td>
                                            <%= user.username %>
                                        </td>
                                        <td>
                                            <% if (user.uploadPhoto) { %>
                                                <img src="<%= user.uploadPhoto %>" alt="User Image"
                                                    style="max-width: 50px;" class="img-thumbnail">
                                                <% } else { %>
                                                    <span>No Image</span>
                                                    <% } %>
                                        </td>
                                        <td>
                                            <%= new Date(post.createdAt).toLocaleDateString() %>
                                        </td>
                                        <td>
                                            <%= post.title %>
                                        </td>
                                        <td>
                                            <%= post.description %>
                                        </td>
                                        <td>
                                            <% if (post.uploadPhoto) { %>
                                                <img src="<%= post.uploadPhoto %>" alt="Post Image"
                                                    style="max-width: 100px;" class="img-thumbnail">
                                                <% } else { %>
                                                    <span>No Image</span>
                                                    <% } %>
                                        </td>
                                        <td>
                                            <% if (post.flagged) { %>
                                                <span class="badge bg-warning">Flagged</span>
                                                <% } else { %>
                                                    <span class="badge bg-success">Active</span>
                                                    <% } %>
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-warning btn-sm"
                                                onclick="setConfirmation('flag', '<%= post._id %>')">Flag</button>
                                            <button type="button" class="btn btn-danger btn-sm"
                                                onclick="setConfirmation('delete', '<%= post._id %>')">Delete</button>
                                        </td>
                                    </tr>
                                    <% }) %>
                                        <% }) %>
                        </tbody>
                    </table>
                </div>

                <div class="modal fade" id="confirmationModal" tabindex="-1"
                    aria-labelledby="confirmationModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="confirmationModalLabel">Confirm Action</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span>&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p id="confirmationMessage"></p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary"
                                    data-dismiss="modal">Cancel</button>
                                <button type="button" class="btn btn-danger" id="confirmButton">Confirm</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script>
            let currentAction = '';
            let currentPostId = '';

            function setConfirmation(action, postId) {
                currentAction = action;
                currentPostId = postId;

                document.getElementById('confirmationMessage').innerText =
                    action === 'flag' ? 'Are you sure you want to flag this post?' :
                        'Are you sure you want to delete this post? This action cannot be undone.';

                $('#confirmationModal').modal('show');
            }

            document.addEventListener('DOMContentLoaded', function () {
                document.getElementById('confirmButton').addEventListener('click', function () {
                    const url = currentAction === 'flag' ? '/flagPost/' + currentPostId : '/deletePost/' + currentPostId;
                    const method = 'POST';

                    // Perform AJAX request
                    fetch(url, {
                        method: method,
                        headers: {
                            'Content-Type': 'application/json',
                        }
                    })
                        .then(response => {
                            if (response.ok) {
                                return response.text();
                            }
                            throw new Error('Network response was not ok.');
                        })
                        .then(data => {
                            $('#confirmationModal').modal('hide');
                            location.reload();
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            alert('An error occurred while processing your request. Please try again.');
                        });
                });
            });
        </script>
