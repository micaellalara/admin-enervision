    <script>
      let currentAction = '';
      let currentPostId = '';

      function setConfirmation(action, postId) {
        currentAction = action;
        currentPostId = postId;

        document.getElementById('confirmationMessage').innerText =
          action === 'flag' ? 'Are you sure you want to flag this post?' :
            'Are you sure you want to delete this post? This action cannot be undone.';

        $('#confirmationModal').modal('show');
      }

      document.addEventListener('DOMContentLoaded', function () {
        document.getElementById('confirmButton').addEventListener('click', function () {
          const url = currentAction === 'flag' ? '/flagPost/' + currentPostId : '/deletePost/' + currentPostId;
          const method = 'POST';

          fetch(url, {
            method: method,
            headers: {
              'Content-Type': 'application/json',
            }
          })
            .then(response => response.json())
            .then(data => {
              if (data.success) {
                $('#confirmationModal').modal('hide');

                if (currentAction === 'delete') {
                  const postRow = document.querySelector(`tr[data-post-id="${currentPostId}"]`);
                  if (postRow) {
                    postRow.remove();
                  }
                  toastr.success('Post successfully deleted!');
                } else if (currentAction === 'flag') {
                  const postRow = document.querySelector(`tr[data-post-id="${currentPostId}"]`);
                  if (postRow) {
                    const statusCell = postRow.querySelector('td:nth-child(7)');
                    if (statusCell) {
                      statusCell.innerHTML = '<span class="badge bg-warning">Flagged</span>';
                    }
                  }
                  toastr.success('Post successfully flagged!');
                }
              } else {
                toastr.error('An error occurred while flagging the post.');
              }
            })
            .catch(error => {
              console.error('Error:', error);
              toastr.error('An error occurred while processing your request. Please try again.');
            });
        });
      });
    </script>
