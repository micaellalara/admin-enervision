                        <th>Date</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody style="text-align: center; vertical-align: middle;">
                      <% flaggedPosts.forEach(post=> { %>
                        <tr data-post-id="<%= post._id %>">
                          <td>
                            <%= post.userId ? post.userId.username : 'User not found' %>
                          </td>
                          <td>
                            <%= post.title %>
                          </td>
                          <td>
                            <%= post.description %>
                          </td>
                          <td>
