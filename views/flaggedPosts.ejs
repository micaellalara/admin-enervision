  <script>
    let currentUnflagPostId = null; 

    function showUnflagPostModal(postId) {
      currentUnflagPostId = postId;
      $('#unflagPostModal').modal('show'); 
    }

    document.getElementById('confirmUnflagButton').addEventListener('click', function () {
      if (currentUnflagPostId) {
        fetch(`/unflagPost/${currentUnflagPostId}`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          }
        })
          .then(response => response.json())
          .then(data => {
            if (data.success) {
              alert('Post has been successfully unflagged.');

              const postRow = document.querySelector(`[data-post-id="${currentUnflagPostId}"]`);
              if (postRow) {
                postRow.remove();
              }
            } else {
              alert('Error unflagging post: ' + data.error);
            }
          })
          .catch(error => {
            console.error('Error:', error);
            alert('An error occurred while processing your request. Please try again.');
          });
        $('#unflagPostModal').modal('hide'); 
      }
    });
  </script>


