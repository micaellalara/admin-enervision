<style>
    #chat-window {
        display: flex;
        flex-direction: column;
        min-height: 600px;
        padding: 20px;
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        border-left: 1px solid #ddd;
    }

    .chat-header {
        padding: 10px 0;
        border-bottom: 1px solid #ddd;
        margin-bottom: 15px;
    }

    .chat-header h3 {
        font-size: 22px;
        font-weight: bold;
        color: #333;
        margin: 0;
    }

    .conversation-box {
        flex-grow: 1;
        height: 400px;
        overflow-y: auto;
        padding: 15px;
        background-color: #fff;
        border: 1px solid #ccc;
        border-radius: 8px;
        display: flex;
        flex-direction: column;
    }

    .message-bubble {
        padding: 10px;
        border-radius: 10px;
        max-width: 50%;
        min-width: 20%;
        margin: 5px 0;
        word-wrap: break-word;
        position: relative;
    }

    .admin-message {
        background-color: #1BBC9B;
        color: white;
        align-self: flex-end;
        text-align: left;
        margin-left: auto;
    }

    .user-message {
        background-color: #f1f1f1;
        color: black;
        align-self: flex-start;
    }

    .message-time {
        display: block;
        font-size: 0.5em;
        color: black;
        margin-top: 5px;
    }

    .chat-input {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-top: 20px;
    }

    #message-input {
        flex-grow: 1;
        resize: none;
        border-radius: 8px;
        padding: 10px;
        border: 1px solid #ddd;
        height: 50px;
    }

    #send-button {
        padding: 8px 20px;
        font-weight: bold;
        border-radius: 8px;
        transition: background-color 0.2s;
        align-self: flex-end;
        height: 50px;
    }

    #send-button:hover {
        background-color: #0056b3;
    }

    #user-list-container {
        background-color: #f8f9fa;
        padding: 20px;
        border-right: 1px solid #ddd;
    }

    #user-list-container .header h2 {
        font-size: 20px;
        font-weight: bold;
        color: #333;
    }

    #user-list {
        list-style-type: none;
        padding: 0;
        margin: 0;
    }

    .user-item,
    .no-message-item {
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 10px;
        transition: background-color 0.2s;
    }

    .user-item:hover {
        background-color: #e9ecef;
    }

    .user-item a {
        text-decoration: none;
        color: #333;
        display: block;
    }

    .user-item .user-info {
        font-size: 16px;
        font-weight: bold;
        color: #1BBC9B;
    }

    .user-item .last-message {
        font-size: 14px;
        color: #555;
    }

    .no-message-item {
        text-align: center;
        color: #999;
        font-style: italic;
        background-color: #f1f1f1;
    }
</style>

