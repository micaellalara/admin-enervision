                <script>
                    document.addEventListener('DOMContentLoaded', function () {
                        document.querySelectorAll('[data-toggle="modal"]').forEach(button => {
                            button.addEventListener('click', function () {
                                const userId = this.getAttribute('data-user-id');

                                fetch(`/user/${userId}`)
                                    .then(response => {
                                        console.log('Response status:', response.status);
                                        return response.json();
                                    })
                                    .then(user => {
                                        console.log('User data:', user);
                                        document.getElementById('modalUserName').innerText = user.name;
                                        document.getElementById('modalUsername').innerText = user.username;
                                        document.getElementById('modalEmail').innerText = user.email;
                                        const statusElement = document.getElementById('modalStatus');
                                        statusElement.innerText = user.status;
                                        statusElement.classList.remove('badge-success', 'badge-danger', 'badge-warning');

                                        const statusValue = user.status;
                                        if (statusValue === 'Active') {
                                            statusElement.classList.add('badge', 'badge-success');
                                        } else if (statusValue === 'Suspended') {
                                            statusElement.classList.add('badge', 'badge-danger');
                                        } else {
                                            statusElement.classList.add('badge', 'badge-warning');
                                        }
                                        document.getElementById('modalOccupation').innerText = user.occupation;
                                        document.getElementById('modalPostCount').innerText = user.postCount;
                                        document.getElementById('modalApplianceCount').innerText = user.applianceCount;
                                        document.getElementById('modalKwhRate').innerText = user.kwhRate;
                                        document.getElementById('modalMobile').innerText = user.mobileNumber;
                                        document.getElementById('modalStreetLine').innerText = user.address ? user.address.streetLine : 'N/A';
                                        document.getElementById('modalCityLine').innerText = user.address ? user.address.cityLine : 'N/A';
                                        document.getElementById('modalCountryLine').innerText = user.address ? user.address.countryLine : 'N/A';
                                        const banDate = user.banDate ? new Date(user.banDate).toLocaleDateString() : 'N/A';
                                        document.getElementById('modalBanDate').innerText = banDate;
                                        document.getElementById('modalEnergyDiary').innerText = user.energyDiary.length > 0 ? user.energyDiary.join(', ') : 'None';
                                    })
                                    .catch(error => console.error('Error fetching user details:', error));
                            });
                        });
