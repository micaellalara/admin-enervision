                <script>
                    document.addEventListener('DOMContentLoaded', function () {
                        // Use event delegation to listen for clicks on buttons
                        document.querySelectorAll('[data-toggle="modal"]').forEach(button => {
                            button.addEventListener('click', function () {
                                const userId = this.getAttribute('data-user-id');

                                // Fetch user details from the server
                                fetch(`/user/${userId}`)
                                    .then(response => {
                                        console.log('Response status:', response.status); // Check status
                                        return response.json();
                                    })
                                    .then(user => {
                                        console.log('User data:', user); // Check the user data
                                        // Populate the modal with user data
                                        document.getElementById('modalUserName').innerText = user.name;
                                        document.getElementById('modalUsername').innerText = user.username;
                                        document.getElementById('modalEmail').innerText = user.email;
                                        const statusElement = document.getElementById('modalStatus');
                                        statusElement.innerText = user.status; // Set the status text
                                        statusElement.classList.remove('badge-success', 'badge-danger', 'badge-warning'); // Remove previous classes

