                                    <h4 class="card-title">User Profiles</h4>
                                    <p class="card-description">
                                        Manage and oversee user profiles from this dashboard.
                                    </p>
            
                                    <% if (users.length === 0) { %>
                                        <div class="alert alert-info text-center" role="alert">
                                            <strong>No users found.</strong>
                                        </div>
                                    <% } else { %>
